@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Flat Finding";
}

<div class="">
    <div class="d-flex container HeaderBanar">
        <div class="HomeHeaderLef">
            @*TODO:
            1) Advance Search: (Area, price, room, type(family, bacelor, sublate) )
            2) Recomend by your profile or behavior, Area ML
            *@
            <div class="card">
                <div class="card-body">
                    <h4>Find the Right Flat</h4>
                    <br />
                    <h5>Search </h5>
                    <br />
                    <form class="p-2">

                        @*<div class="text-center">
                        <input type="radio" /> <b style="margin-right: 30px">AI Recomanded Search</b>
                        <input type="radio" /> <b>General Search</b>
                        </div>*@

                        <div class="row  mt-3">
                            <div class="col-6 mb-3">
                                <label>Select Area</label>
                                <select class="form-control">
                                    <option>All</option>
                                    <option>Mirpur</option>
                                    <option>Bonani</option>
                                    <option>Uttara</option>
                                </select>
                            </div>

                            <div class="col-6 mb-3">
                                <label>Price Range</label>
                                <input type="number" class="form-control" />
                            </div>

                            <div class="col-6 mb-3">
                                <label>Number of Rooms</label>
                                <select class="form-control">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                </select>
                            </div>
                            <div class="col-6 mb-3">
                                <label>Type of Flat</label>
                                <select class="form-control">
                                    <option>Family</option>
                                    <option>Bachelor</option>
                                    <option>Sublate</option>

                                </select>
                            </div>



                        </div>
                        <a class="btn btn-success mt-3 mb-3" asp-controller="Flat" asp-action="Index">Search Now</a>
                    </form>
                </div>
            </div>
        </div>
        <div class="HomeHeaderRight">
            <div class="card">
                <div class="card-header">See Area wise</div>
                <div class="card-body d-flex flex-wrap">


                    <a class="btn btn-outline-success mb-2" style="margin-right: 4px" asp-area="" asp-controller="Home" asp-action="Index">Uttara (5)</a>
                    <a class="btn btn-outline-success mb-2" style="margin-right: 4px" asp-area="" asp-controller="Home" asp-action="Index">Airport (7)</a>
                    <a class="btn btn-outline-success mb-2" style="margin-right: 4px" asp-area="" asp-controller="Home" asp-action="Index">Mirpur (15)</a>
                    <a class="btn btn-outline-success mb-2" style="margin-right: 4px" asp-area="" asp-controller="Home" asp-action="Index">Motijil (9)</a>
                    <a class="btn btn-outline-success mb-2" style="margin-right: 4px" asp-area="" asp-controller="Home" asp-action="Index">Basundhara (11)</a>

                </div>
                <div class="p-2">
                    <hr />
                    <p>Quick Update</p>
                    New Flat (24h) <br />
                    Last 7 days
                </div>

                <div class="card-footer">
                    <small>Best Flat with Best Match</small>
                </div>
            </div>
        </div>
    </div>
    <div class="RecomendedArea mt-5 mb-3">
        <h4>Recomanded Flat</h4>
        <div class="d-flex flex-wrap justify-content-center">
            @for(int i = 0; i <= 6; i++)
            {
                <div class="card mt-3 mb-3 " style="width: 300px; height:340px; margin-right: 20px;">
                    <img class="card-img-top" style="overflow: hidden" src="/img/flat.jpg" alt="Card image cap">
                    <div class="card-body">
                       <div>
                            <small class="dec_flat"><b>Address:</b> H: 50, R: 10, Sc: 10, Uttara </small> <br />
                            <small class="dec_flat "><b> Price:</b> 20000 tk/month </small>
                            <small class="dec_flat mx-3"><b>  Type:</b> Family</small> <br />
                            <small class="dec_flat"><b> Rooms:</b> 4</small>
                       </div>
                       <div>
                           <b>Views</b> 200
                            <a class="btn btn-primary" style="margin-left: 70px" asp-controller="Flat" asp-action="FlatDetails">Booked Now</a>
                       </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>